---
import MainHead from "../components/MainHead.astro";
import Nav from "../components/section/Nav.astro";
import Footer from "@/components/section/Footer.astro";
import Cursor from "@/components/ui/Cursor.astro";
interface Props {
  title?: string | undefined;
  description?: string | undefined;
  keywords?: string | undefined;
}
const { title, description, keywords } = Astro.props;
---

<html lang="en">
  <head>
    <MainHead title={title} description={description} keywords={keywords} />
  </head>
  <body>
    <Cursor />
    <div class="page">
      <Nav transition:persist/>
      <slot />
      <Footer />
    </div>
  </body>
</html>
