      <input
        type="text"
        class="contact-form__input"
        placeholder="Name"
        required
      />
    </div>
    <div class="contact-form__item">
      <input
        type="email"
        class="contact-form__input"
        placeholder="Email"
        required
      />
    </div>
    <div class="contact-form__item">
      <textarea
