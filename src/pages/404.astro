---
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/ui/Button.astro";
import { notFoundTDK } from "../config/seoTdk";
---

<Layout
  title={notFoundTDK.title || ""}
  description={notFoundTDK.description || ""}
  keywords={notFoundTDK.keywords || ""}
>
  <div class="page-contact no-scroll">
    <div class="page-content">
      <section class="404">
        <div class="content">
          <h1 class="xl">Not Found</h1>
          <p class="s">We couldn't find the page you were looking for.</p>
          <div class="notfound-btn">
            <Button href="/" target="_self"> Go Home </Button>
          </div>
        </div>
      </section>
    </main>
  </div>

  <style>
    body {
      min-height: 100vh;
    }
    .content {
      min-height: 60vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .man {
      margin-bottom: 0;
    }
    h1 {
      margin: 0 auto 2rem;
      text-align: center;
	  letter-spacing: 0;
    }
    p {
      text-align: center;
    }
    .notfound-btn {
      margin: 2rem auto 4em;
      text-align: center;
    }
  </style>
</Layout>
